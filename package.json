{
    "name": "@rigidity/clvm",
    "author": "rigidity",
    "version": "3.1.1",
    "description": "A browser friendly implementation of clvm.",
    "repository": "https://github.com/Rigidity/clvm.git",
    "source": "src/index.ts",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "bundle": "dist/bundle/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
    },
    "license": "MIT",
    "scripts": {
        "test": "mocha './dist/test/**/*.js' --require source-map-support/register --recursive --timeout 0",
        "build": "parcel build",
        "watch": "parcel watch"
    },
    "targets": {
        "main": {
            "sourceMap": {
                "inline": true
            }
        },
        "module": {
            "sourceMap": {
                "inline": true
            }
        },
        "bundle": {
            "context": "browser",
            "outputFormat": "global",
            "source": "src/browser.ts",
            "includeNodeModules": [
                "@rigidity/bls-signatures",
                "jssha",
                "randombytes"
            ],
            "sourceMap": {
                "inline": true
            }
        },
        "test": {
            "context": "node",
            "source": [
                "test/compile.ts",
                "test/deserialize.ts",
                "test/run.ts",
                "test/serialize.ts"
            ],
            "sourceMap": {
                "inline": true
            }
        }
    },
    "files": [
        "dist",
        "include"
    ],
    "devDependencies": {
        "@parcel/packager-ts": "2.3.2",
        "@parcel/transformer-typescript-types": "2.3.2",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "mocha": "^9.1.3",
        "parcel": "^2.3.2",
        "source-map-support": "^0.5.21",
        "typescript": ">=3.0.0"
    },
    "dependencies": {
        "@rigidity/bls-signatures": "^2.0.1",
        "chai": "^4.3.4"
    }
}
